---
interface Props {
  href?: string;
}

const { href } = Astro.props;
---

<td class="p-0 text-gray-300">
  {
    href ? (
      <a class="block w-full px-2 py-2" href={href}>
        <slot />
      </a>
    ) : (
      <div class="block w-full px-2 py-2">
        <slot />
      </div>
    )
  }
</td>
